<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/con"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@+id/con"
        app:layout_constraintRight_toRightOf="@+id/con"
        app:layout_constraintLeft_toLeftOf="@+id/con"
        app:layout_constraintBottom_toBottomOf="@+id/con"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/delbtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이메일 변경"/>
        <Button
            android:id="@+id/delbtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 변경"/>
        <Button
            android:id="@+id/delbtn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원 탈퇴"/>
        <TextView
            android:id="@+id/cur_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/change_id"
            android:text=""
            android:inputType="text"
            android:hint="변경하실 이메일 주소를 작성 후 엔터를 눌러주세요"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>